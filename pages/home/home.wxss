#back-top {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  z-index: 99;
  left: 640rpx;
  top: 90vh;
}
#back-top image{
  width: 100%;
  height: 100%;
}
.title {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ff8198;
  text-align: center;
  color: white;
  font-size: 38rpx;
  left: 0;
  top: 0;
  right: 0;
  position: fixed;
  z-index: 99;
}

swiper {
  height: 480rpx;
}

.recommend {
  display: flex;
}

.recommend-item {
  flex: 1;
  text-align: center;
  padding: 40rpx 0;
  border-bottom: 10px solid #eee;
}

.recommend-item image {
  width: 136rpx;
  height: 136rpx;
}

.recommend-item p {
  font-size: 28rpx;
  display: block;
}

.weekhot image {
  width: 100%;
  height: 280px;
}

.goods-item {
  width: 48%;
  float: left;
  padding: 1%;
  text-align: center;
}
.goods-title {
  width: 100%;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.goods-price {
  color: #ff5777;
}
.goods-item image {
  width: 100%;
  border-radius: 10rpx;
}
.goods .img-like {
  width: 20px;
  height: 20px;
  display: inline-block;
  position: relative;
  top: 3px;
  left: 6px;
}
.goods-cfav {
  position: relative;
  left: 7px;
}