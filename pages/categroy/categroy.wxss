.title {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ff8198;
  text-align: center;
  color: white;
  font-size: 38rpx;
  left: 0;
  top: 0;
  right: 0;
  position: fixed;
  z-index: 99;
}

.all-scroll {
  display: flex;
  position: absolute;
  top: 88rpx;
}

.scroll-left {
  height: 100vh;
  width: 200rpx;
  text-align: center;
  background-color: #f6f6f6;
}
.istype {
  border-left: 3px solid #ff5777;
  background-color: white;
}
.nonetype {
  background-color: #f6f6f6;
}
.scroll-left p {
  height: 100rpx;
  line-height: 100rpx;
}

.scroll-right {
  flex: 1;
  text-align: center;
  height:100vh;
}

.categroy-data-item {
  float: left;
  width: 178rpx;
  /* height: 200rpx; */
  overflow: hidden;
  margin-top: 40rpx;
  display: in;
