.title {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ff8198;
  text-align: center;
  color: white;
  font-size: 38rpx;
  left: 0;
  top: 0;
  right: 0;
  position: fixed;
  z-index: 99;
}

.cartbar {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 88rpx;
  line-height: 88rpx;
  box-shadow: 1px 1px 3px #bebebe;
  width: 100%;
}

.cartbar image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 3px;
}

.cartbar text:nth-child(1) {
  color: #ff22ff;
  padding: 50rpx;
}

.cartbar .close {
  width: 140px;
  height: 100%;
  display: inline-block;
  text-align: center;
  color: white;
  border-radius: 50px;
  background-color: #F56C6C ;
  position: relative;
  left: 120px;
}