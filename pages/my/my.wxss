.title {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ff8198;
  text-align: center;
  color: white;
  font-size: 38rpx;
  left: 0;
  top: 0;
  right: 0;
  position: fixed;
  z-index: 99;
}
.login{
  width: 100%;
  height: 240rpx;
  background-color: #ff8198;
  margin-top: 88rpx;
  overflow: hidden;
}
.login view {
  float: left;
}
.myimage image {
  width: 80px;
  height: 80px;
  border-radius: 50px;
  margin: 20px;
  border: 2px solid #7e797a;
}
.content {
  position: relative;
  top: 60rpx;
  color: #ffffff;
}
.content text:nth-child(1){
  font: 40rpx 微软雅黑;
  display: block;
  font-weight: bold;
}
.content text:nth-child(3){
  /* display: block; */
  line-height: 80rpx;
  position: relative;
  left: 40rpx;
}
.content text:nth-child(4) {
  position: relative;
  right: -240rpx;
}
.phone {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  top: 76rpx;
}
.money {
  display: flex;
  text-align: center;
  padding-bottom: 120rpx;
  border-bottom: solid 14px #f2f2f2;
}
.money .money-item {
  flex: 1;
  border-right: 3px solid #f2f2f2;
}
.money-item text:nth-child(1),.money-item text:nth-child(2){
  height: 50rpx;
  line-height: 50rpx;
  position: relative;
  top: 60rpx;
}
.isblock {
  display: block;
  position: relative;
  top: 60rpx;
}
.money-item text:nth-child(1) {
  font-size: 50rpx;
  color: #ff5f3e;
  padding: 3px;
}
.host {
  border-bottom: solid 14px #f2f2f2;
}
.host-item {
  display: flex;
}
.host-item image{
  width: 70rpx;
  height: 70rpx;
  padding: 30rpx 34rpx;
}
.host-item text {
  font-size: 36rpx;
  font-weight: 100;
  flex: 1;
  height: 80rpx;
  padding-top: 34rpx;
  border-bottom: 3px solid #f2f2f2;
}